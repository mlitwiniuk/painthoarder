<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Bulk Import Paints</h1>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Enter Paint Names</h2>
      <p class="text-sm text-base-content/70 mb-4">Enter each paint name separately, using new lines, commas, or semicolons as separators.</p>

      <%= form_with url: bulk_search_user_paints_path, method: :post, data: { turbo: true } do |f| %>
        <div class="form-control mb-4">
          <%= f.text_area :paint_names, rows: 7, class: "textarea textarea-bordered w-full", placeholder: "Abaddon Black\nMephiston Red\nUltramarine Blue\nCeramic White" %>
        </div>
        <div class="flex justify-end">
          <%= f.submit "Find Matches", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div id="bulk-import-results" class="mt-8">
    <% if @search_results.present? %>
      <%= render "bulk_import_results", search_results: @search_results %>
    <% end %>
  </div>
</div>
