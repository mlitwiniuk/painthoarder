<% content_for :title, "My Paint Collection | PaintStash" %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">My Paint Collection</h1>

  <%= turbo_frame_tag "dashboard-stats" do %>
    <div class="stats shadow mb-8 w-full">
      <div class="stat">
        <div class="stat-figure text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="stat-title">Collection Size</div>
        <div class="stat-value text-primary"><%= @owned_count %></div>
        <div class="stat-desc">Paints in your collection</div>
      </div>

      <div class="stat">
        <div class="stat-figure text-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
          </svg>
        </div>
        <div class="stat-title">Wishlist</div>
        <div class="stat-value text-secondary"><%= @wishlist_count %></div>
        <div class="stat-desc">Paints you want to buy</div>
      </div>

      <div class="stat">
        <div class="stat-figure text-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
          </svg>
        </div>
        <div class="stat-title">Brands</div>
        <div class="stat-value"><%= current_user.paints.distinct.joins(product_line: :brand).select('brands.id').distinct.count %></div>
        <div class="stat-desc">Represented in your collection</div>
      </div>
    </div>
  <% end %>

  <%= turbo_frame_tag "collection-filters" do %>
    <div class="card bg-base-100 shadow mb-6">
      <div class="card-body p-4" data-controller="toggle">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <h2 class="card-title text-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
            </svg>
            Filter Collection
          </h2>

          <div class="join">
            <%= link_to new_user_paint_path, class: "btn btn-primary join-item", data: { turbo_frame: "modal" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Add Paint
            <% end %>
            <button data-action="toggle#toggle" class="btn btn-ghost join-item">
              <span data-toggle-target="label">Filters</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transition-transform duration-200"
                  data-toggle-target="icon" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>

        <div data-toggle-target="content" class="hidden mt-4">
          <%= form_with url: user_paints_path, method: :get, data: { turbo_frame: "collection-results", turbo_action: "advance", controller: "auto-submit" } do |f| %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
              <div class="form-control">
                <label class="label">
                  <span class="label-text">Search</span>
                </label>
                <%= f.text_field :search,
                            value: params[:search],
                            placeholder: "Paint name, brand...",
                            class: "input input-bordered w-full",
                            data: { action: "input->auto-submit#debouncedSubmit" } %>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text">Brand</span>
                </label>
                <%= f.select :brand_id,
                        options_from_collection_for_select(@brands, :id, :name, params[:brand_id]),
                        { include_blank: "All Brands" },
                        class: "select select-bordered w-full",
                        data: { action: "change->auto-submit#submit" } %>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text">Product Line</span>
                </label>
                <%= f.select :product_line_id,
                        options_from_collection_for_select(@product_lines, :id, :to_s, params[:product_line_id]),
                        { include_blank: "All Product Lines" },
                        class: "select select-bordered w-full",
                        data: { action: "change->auto-submit#submit" } %>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text">Color</span>
                </label>
                <%= f.select :color,
                        options_for_select(@color_categories, params[:color]),
                        { include_blank: "All Colors" },
                        class: "select select-bordered w-full",
                        data: { action: "change->auto-submit#submit" } %>
              </div>
            </div>

            <div class="flex justify-end mt-4">
              <%= link_to "Clear Filters", user_paints_path, class: "btn btn-ghost ml-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="tabs tabs-boxed mb-6">
    <%= link_to user_paints_path(params.permit(:search, :brand_id, :product_line_id, :color).merge(status: :owned)),
            class: "tab #{params[:status] == 'owned' || params[:status].blank? ? 'tab-active' : ''}" do %>
      Owned (<%= @owned_count %>)
    <% end %>

    <%= link_to user_paints_path(params.permit(:search, :brand_id, :product_line_id, :color).merge(status: :wishlist)),
            class: "tab #{params[:status] == 'wishlist' ? 'tab-active' : ''}" do %>
      Wishlist (<%= @wishlist_count %>)
    <% end %>

    <%= link_to user_paints_path(params.permit(:search, :brand_id, :product_line_id, :color).merge(status: :avoid)),
            class: "tab #{params[:status] == 'avoid' ? 'tab-active' : ''}" do %>
      Avoid (<%= @avoid_count %>)
    <% end %>
  </div>

  <%= turbo_frame_tag "collection-results" do %>
    <% if @user_paints.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% @user_paints.each do |user_paint| %>
          <div id="<%= dom_id(user_paint) %>" class="card bg-base-100 shadow hover:shadow-lg transition-shadow duration-300">
            <div class="card-body p-4">
              <%= link_to user_paint_path(user_paint), class: "flex items-center gap-3 mb-2", data: { turbo_frame: "_top" } do %>
                <div class="w-10 h-10 rounded-full border shadow-sm flex-shrink-0"
                     style="background-color: <%= user_paint.paint.hex_color %>;"></div>
                <div>
                  <h3 class="font-bold"><%= user_paint.paint.name %></h3>
                  <div class="text-xs opacity-70">
                    <%= user_paint.paint.product_line.brand.name %> â€¢
                    <%= user_paint.paint.product_line.name %>
                  </div>
                </div>
              <% end %>

              <div class="divider my-2"></div>

              <div class="flex justify-between items-center">
                <div>
                  <% case user_paint.status %>
                  <% when 'owned' %>
                    <div class="badge badge-success gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      Owned
                    </div>
                  <% when 'wishlist' %>
                    <div class="badge badge-warning gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                      </svg>
                      Wishlist
                    </div>
                  <% when 'avoid' %>
                    <div class="badge badge-error gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                      </svg>
                      Avoid
                    </div>
                  <% end %>

                  <% if user_paint.purchase_date.present? %>
                    <div class="badge badge-ghost badge-sm ml-1">
                      <%= user_paint.purchase_date.strftime("%b %Y") %>
                    </div>
                  <% end %>
                </div>

                <div class="dropdown dropdown-end">
                  <label tabindex="0" class="btn btn-ghost btn-circle btn-xs">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
                    </svg>
                  </label>
                  <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52 z-50">
                    <li>
                      <%= link_to user_paint_path(user_paint) do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                        View Details
                      <% end %>
                    </li>
                    <li>
                      <%= link_to edit_user_paint_path(user_paint), data: { turbo_frame: "modal" } do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                        </svg>
                        Edit
                      <% end %>
                    </li>
                    <!-- Status change options remain the same -->
                  </ul>
                </div>
              </div>

              <% if user_paint.notes.present? %>
                <div class="mt-2">
                  <div class="text-xs font-semibold opacity-70">Notes:</div>
                  <p class="text-sm line-clamp-2"><%= user_paint.notes %></p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="card bg-base-100 shadow">
        <div class="card-body text-center py-12">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-base-content opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
          </svg>
          <h2 class="text-2xl font-bold mt-4">No paints found</h2>
          <p class="mt-2 text-base-content/70">
            <% if params[:search].present? || params[:brand_id].present? || params[:product_line_id].present? || params[:color].present? %>
              No paints match your current filters
            <% else %>
              <%= params[:status] == 'owned' || params[:status].blank? ? "You haven't added any paints to your collection yet" :
                    params[:status] == 'wishlist' ? "Your wishlist is empty" :
                    "You haven't marked any paints to avoid" %>
            <% end %>
          </p>
          <div class="mt-6">
            <% if params[:search].present? || params[:brand_id].present? || params[:product_line_id].present? || params[:color].present? %>
              <%= link_to "Clear Filters", user_paints_path(status: params[:status]), class: "btn btn-primary" %>
            <% else %>
              <%= link_to new_user_paint_path, class: "btn btn-primary", data: { turbo_frame: "modal" } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Your First Paint
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= turbo_frame_tag "modal" %>
