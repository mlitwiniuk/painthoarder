<%# app/views/pages/home.html.erb %>
<% content_for :title, "MiniPaints - Organize Your Miniature Paints Collection" %>
<% @hide_footer = true %>

<!-- Hero Section -->
<header class="bg-gradient-to-r from-primary to-secondary text-primary-content">
  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="space-y-6">
        <h1 class="text-5xl font-bold leading-tight">Organize Your Miniature Paints Collection</h1>
        <p class="text-xl opacity-90">
          Track, manage, and discover paints for your miniature hobby. Never buy duplicates or forget your wishlist again.
        </p>
        <div class="pt-4">
          <%= link_to "Start Your Collection", new_user_registration_path, class: "btn btn-accent btn-lg" %>
        </div>
        <div class="flex items-center space-x-2 text-sm mt-4">
          <div class="flex -space-x-2">
            <% @last_users.each_with_index do |user, i| %>
              <div class="avatar">
                <div class="w-8 h-8 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2" style="background-color: hsl(<%= i * 72 %>, 80%, 50%)">
                  <%= gravatar_for(user) %>
                </div>
              </div>
            <% end %>
          </div>
          <span class="opacity-75">Joined by <%= number_to_human(@user_count, precision: 1) %> painters</span>
        </div>
      </div>

      <div class="relative">
        <!-- Simple Image Slider with Startup Style -->
        <div class="w-full h-64 md:h-96 bg-base-200 rounded-2xl shadow-xl overflow-hidden screenshot-slider relative">
          <div class="relative w-full h-full" data-controller="simple-slider">
            <!-- Slides Container -->
            <div class="relative w-full h-full" data-simple-slider-target="slidesContainer">
              <!-- First Screenshot -->
              <div class="absolute inset-0 w-full h-full" data-simple-slider-target="slide" data-active="true">
                <div class="relative w-full h-full">
                  <%= image_tag "paintstash.png", alt: "PaintHoarder Dashboard", class: "w-full h-full object-cover object-top" %>
                  <div class="absolute inset-0 bg-gradient-to-tr from-primary/30 to-transparent"></div>
                  <div class="absolute bottom-4 left-4 bg-base-100/80 backdrop-blur-sm px-3 py-2 rounded-lg text-sm font-medium shadow-lg">Main Dashboard</div>
                </div>
              </div>

              <!-- Second Screenshot -->
              <div class="absolute inset-0 w-full h-full hidden" data-simple-slider-target="slide">
                <div class="relative w-full h-full">
                  <%= image_tag "paintstash-mypaints.png", alt: "PaintHoarder My Paints", class: "w-full h-full object-cover object-top" %>
                  <div class="absolute inset-0 bg-gradient-to-bl from-secondary/30 to-transparent"></div>
                  <div class="absolute bottom-4 left-4 bg-base-100/80 backdrop-blur-sm px-3 py-2 rounded-lg text-sm font-medium shadow-lg">My Paints Collection</div>
                </div>
              </div>
            </div>

            <!-- Startup-style Feature Tags -->
            <div class="absolute top-4 right-4 bg-accent/90 text-accent-content px-3 py-1 rounded-full text-xs font-bold shadow-lg backdrop-blur-sm">NEW</div>

            <!-- Slider Navigation Arrows -->
            <button class="absolute left-2 top-1/2 -translate-y-1/2 w-8 h-8 rounded-full bg-white/50 hover:bg-white/80 flex items-center justify-center z-10 transition-all" data-action="simple-slider#previous">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <button class="absolute right-2 top-1/2 -translate-y-1/2 w-8 h-8 rounded-full bg-white/50 hover:bg-white/80 flex items-center justify-center z-10 transition-all" data-action="simple-slider#next">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>

            <!-- Slider Navigation Dots -->
            <div class="absolute bottom-3 right-3 flex space-x-2 z-10">
              <button class="w-3 h-3 rounded-full bg-white/70 hover:bg-white transition-colors" data-simple-slider-target="indicator" data-action="simple-slider#goToSlide" data-index="0"></button>
              <button class="w-3 h-3 rounded-full bg-white/40 hover:bg-white transition-colors" data-simple-slider-target="indicator" data-action="simple-slider#goToSlide" data-index="1"></button>
            </div>
          </div>
        </div>
        <!-- Stats Badge -->
        <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-accent rounded-full flex items-center justify-center text-accent-content font-bold shadow-lg">
          <div class="text-center">
            <div class="text-3xl"><%= number_to_human(@paint_count, precision: 1) %></div>
            <div class="text-sm">Paints</div>
          </div>
        </div>
        <!-- Device Frame Decoration -->
        <div class="absolute -top-2 -left-2 w-8 h-8 bg-secondary rounded-full shadow-lg"></div>
        <div class="absolute -top-2 -right-2 w-4 h-4 bg-primary rounded-full shadow-lg"></div>
      </div>
    </div>
  </div>
</header>

<!-- Features Section -->
<section class="py-20 bg-base-100">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold">Everything You Need For Your Painting Hobby</h2>
      <p class="text-xl mt-4 opacity-70">Designed by miniature painters, for miniature painters</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="card bg-base-200 shadow-lg hover:shadow-xl transition-shadow">
        <div class="card-body">
          <div class="w-16 h-16 rounded-full bg-primary text-primary-content flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <h3 class="card-title text-2xl">Organize Your Collection</h3>
          <p class="opacity-75">Track every paint you own across all brands and product lines in one place. See your collection at a glance.</p>
        </div>
      </div>

      <div class="card bg-base-200 shadow-lg hover:shadow-xl transition-shadow">
        <div class="card-body">
          <div class="w-16 h-16 rounded-full bg-secondary text-secondary-content flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <h3 class="card-title text-2xl">Build Your Wishlist</h3>
          <p class="opacity-75">Keep track of paints you want to buy. Bring your wishlist to the store and never forget what you needed.</p>
        </div>
      </div>

      <div class="card bg-base-200 shadow-lg hover:shadow-xl transition-shadow">
        <div class="card-body">
          <div class="w-16 h-16 rounded-full bg-accent text-accent-content flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
            </svg>
          </div>
          <h3 class="card-title text-2xl">Find Color Matches</h3>
          <p class="opacity-75">Need a specific color? Find similar paints across brands based on color data and community recommendations.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- How It Works Section -->
<section class="py-20 bg-base-200">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold">How It Works</h2>
      <p class="text-xl mt-4 opacity-70">Start organizing your collection in minutes</p>
    </div>

    <div class="flex flex-col md:flex-row items-center justify-center gap-12 max-w-5xl mx-auto">
      <div class="w-full md:w-1/3 text-center">
        <div class="w-20 h-20 bg-primary rounded-full flex items-center justify-center text-primary-content text-2xl font-bold mx-auto mb-6">1</div>
        <h3 class="text-xl font-bold mb-2">Create Your Account</h3>
        <p class="opacity-75">Sign up for free and set up your profile in seconds</p>
      </div>

      <div class="w-full md:w-1/3 text-center">
        <div class="w-20 h-20 bg-primary rounded-full flex items-center justify-center text-primary-content text-2xl font-bold mx-auto mb-6">2</div>
        <h3 class="text-xl font-bold mb-2">Add Your Paints</h3>
        <p class="opacity-75">Search our database and build your collection quickly</p>
      </div>

      <div class="w-full md:w-1/3 text-center">
        <div class="w-20 h-20 bg-primary rounded-full flex items-center justify-center text-primary-content text-2xl font-bold mx-auto mb-6">3</div>
        <h3 class="text-xl font-bold mb-2">Enjoy The Benefits</h3>
        <p class="opacity-75">Organize, discover, and track your painting supplies</p>
      </div>
    </div>
  </div>
</section>

<!-- Testimonials Section -->
